{% extends 'base.html.twig' %}

{% block title %}Players{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Show Player of Team <b>{{ team.name }} </b></h2>
        <div class="card">
            <div class="card-body">
                <b class="text-muted">Name:</b>
                <p>{{ player.name }}</p>
                <b class="text-muted">Surname:</b>
                <p>{{ player.surname }}</p>
                <b class="text-muted">Team:</b>
                <p>{{ player.team_id ?? 'NULL' }}</p>
            </div>
        </div>
    </div>
{% endblock %}